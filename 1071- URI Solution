X=int(input())
Y=int(input())
s=0
if(Y%2==0 and X>Y):
    for i in range(Y+1,X,2):
        s+=i
    print(s)
elif(Y%2!=0 and X>Y):
    for i in range(Y+2 , X, 2):
        s += i
    print(s)
elif (X % 2 == 0 and Y > X):
    for i in range(X + 1, Y, 2):
        s += i
    print(s)
elif (X % 2 != 0 and Y > X):
    for i in range(X + 2, Y, 2):
        s += i
    print(s)
elif(X==Y):
    print(s)
